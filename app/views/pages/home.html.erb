
<!-- Carousel
================================================== -->
<div id="myCarousel" class="carousel slide">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="item active">
      <img src=<%= asset_path "Agriculture.png" %> style="width:100%" class="img-responsive">
      <div class="container">
        <div class="carousel-caption">
          <h3 class="title">Il lavoro e la produzione aumenta e i guadagni si abbassano?</h3>
         
        </div>
      </div>
    </div>
    <div class="item">
      <img src=<%= asset_path "pensare5.jpg" %> class="img-responsive">
      <div class="container">
        <div class="carousel-caption">
          <h1 class="title">Pensi a come crescere una pianta sana e forte? </h1>
          
        </div>
      </div>
    </div>
    <div class="item">
      <img src=<%= asset_path "Statistiche.jpg" %> class="img-responsive">
      <div class="container">
        <div class="carousel-caption">
          <h1 class="title">Chiedi ad esperti il loro parere </h1>
          <%= render "homeLogged" %>
          
        </div>
      </div>
    </div>
  </div>
  <!-- Controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="icon-prev"></span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="icon-next"></span>
  </a>  
</div>
<!-- /.carousel -->


